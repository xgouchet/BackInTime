<?xml version="1.0" encoding="utf-8"?>
<fr.xgouchet.android.bttf.widget.TimeCircuitsWatchface xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watchface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingTop="12dp"
    tools:context=".TimeCircuitsWatchfaceActivity">


    <LinearLayout
        android:id="@+id/row_destination"
        style="@style/TimeCircuits.Layout.Plate"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/plate_destination_labels">

        <TextView
            android:id="@+id/text_dest_month"
            style="@style/TimeCircuits.Text.Destination"
            tools:text="OCT" />

        <TextView
            android:id="@+id/text_dest_day"
            style="@style/TimeCircuits.Text.Destination"
            tools:text="21" />

        <TextView
            android:id="@+id/text_dest_year"
            style="@style/TimeCircuits.Text.Destination"
            tools:text="2015" />


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_dest_hour"
            style="@style/TimeCircuits.Text.Destination"
            tools:text="16" />

        <TextView
            android:id="@+id/text_dest_minute"
            style="@style/TimeCircuits.Text.Destination"
            tools:text="35" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_present"
        style="@style/TimeCircuits.Layout.Plate"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/plate_present">

        <TextView
            android:id="@+id/text_present_month"
            style="@style/TimeCircuits.Text.Present"
            tools:text="OCT" />

        <TextView
            android:id="@+id/text_present_day"
            style="@style/TimeCircuits.Text.Present"
            tools:text="21" />

        <TextView
            android:id="@+id/text_present_year"
            style="@style/TimeCircuits.Text.Present"
            tools:text="2015" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_present_hour"
            style="@style/TimeCircuits.Text.Present"
            tools:text="16" />

        <TextView
            android:id="@+id/text_present_minute"
            style="@style/TimeCircuits.Text.Present"
            tools:text="35" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_departed"
        style="@style/TimeCircuits.Layout.Plate"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/plate_departed">

        <TextView
            android:id="@+id/text_depart_month"
            style="@style/TimeCircuits.Text.Departed"

            tools:text="OCT" />

        <TextView
            android:id="@+id/text_depart_day"
            style="@style/TimeCircuits.Text.Departed"
            tools:text="21" />

        <TextView
            android:id="@+id/text_depart_year"
            style="@style/TimeCircuits.Text.Departed"
            tools:text="2015" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_depart_hour"
            style="@style/TimeCircuits.Text.Departed"
            tools:text="16" />

        <TextView
            android:id="@+id/text_depart_minute"
            style="@style/TimeCircuits.Text.Departed"
            tools:text="35" />
    </LinearLayout>


</fr.xgouchet.android.bttf.widget.TimeCircuitsWatchface>