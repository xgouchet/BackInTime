<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="fr.xgouchet.android.backintime"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.type.watch"/>

    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.BATTERY_STATS"/>

    <application
        android:name="fr.xgouchet.android.backintime.BackInTimeApplication"
        android:label="Back to the future">

        <activity
            android:name="fr.xgouchet.android.backintime.activity.ClockTowerWatchfaceActivity"
            android:allowEmbedded="true"
            android:label="Clock Tower"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/clocktower_preview"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND"/>
            </intent-filter>
        </activity>


        <activity
            android:name="fr.xgouchet.android.backintime.activity.TimeCircuitsWatchFaceActivity"
            android:allowEmbedded="true"
            android:label="TimeCircuits"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/timecircuits_preview"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND"/>
            </intent-filter>
        </activity>

        <activity
            android:name="fr.xgouchet.android.backintime.activity.GroundHogWatchFaceActivity"
            android:allowEmbedded="true"
            android:label="GroundHog Day"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/groundhog_preview"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND"/>
            </intent-filter>
        </activity>

        <!-- Meta data needed to communicate between the wearable and any linked device -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

    </application>

</manifest>
