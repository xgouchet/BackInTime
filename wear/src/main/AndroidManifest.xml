<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.xgouchet.android.bttf">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />

    <application
        android:name=".BTTFWatchfaceApp"
        android:label="Back to the future">
        <activity
            android:name=".activity.TimeCircuitsWatchfaceActivity"
            android:allowEmbedded="true"
            android:label="@string/time_circuits"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/timecircuits_preview" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ClockTowerWatchfaceActivity"
            android:allowEmbedded="true"
            android:label="Clock Tower"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">

            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/clock_tower_preview_black" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND" />
            </intent-filter>
        </activity>

        <!-- Meta data needed to communicate between the wearable and any linked device -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
