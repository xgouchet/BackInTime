<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimeCircuits.Layout.Plate" parent="android:Widget">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="TimeCircuits.Layout.Plate.Large" parent="android:Widget">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">88dp</item>
    </style>

    <style name="TimeCircuits.Text" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeCircuits.Text.Glow" parent="TimeCircuits.Text">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">@integer/glow_radius</item>
    </style>


    <style name="TimeCircuits.Text.Destination" parent="TimeCircuits.Text.Glow">
        <item name="android:textColor">@color/accent_destination</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:background">@color/screen_destination</item>
    </style>

    <style name="TimeCircuits.Text.Present" parent="TimeCircuits.Text.Glow">
        <item name="android:textColor">@color/accent_present</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:background">@color/screen_present</item>
    </style>

    <style name="TimeCircuits.Text.Departed" parent="TimeCircuits.Text.Glow">
        <item name="android:textColor">@color/accent_departed</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:background">@color/screen_departed</item>
    </style>


    <style name="ClockTower.ImageView" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>
</resources>